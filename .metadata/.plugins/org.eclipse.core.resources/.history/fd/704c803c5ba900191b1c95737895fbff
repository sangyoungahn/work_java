				if(myWinCnt == 3 || comWinCnt == 3) {
					if(myWinCnt == 3)	System.out.println("### 이겼습니다!!!");
					
					else if(comWinCnt == 3)		System.out.println("### 컴퓨터 승!!!");
				}
			}
			
		}
		
